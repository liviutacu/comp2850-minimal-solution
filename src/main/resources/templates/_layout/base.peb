<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{% block title %}COMP2850 Task Manager{% endblock %}</title>
  
  {# Pico CSS for baseline accessible styles (WCAG 2.2 AA compliant) #}
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@2/css/pico.min.css">
  <link rel="stylesheet" href="/static/css/custom.css">
  
  {# HTMX for progressive enhancement #}
  <script src="https://unpkg.com/htmx.org@1.9.12"></script>
  
  <style>
    /* Visually hidden but accessible to screen readers (WCAG 1.3.1) */
    .visually-hidden {
      position: absolute !important;
      height: 1px;
      width: 1px;
      overflow: hidden;
      clip: rect(1px, 1px, 1px, 1px);
      white-space: nowrap;
    }
    
    /* Skip link for keyboard navigation (WCAG 2.4.1) */
    .skip-link {
      position: absolute;
      left: -10000px;
      width: 1px;
      height: 1px;
      overflow: hidden;
    }
    .skip-link:focus {
      position: static;
      width: auto;
      height: auto;
      background: #1976d2;
      color: white;
      padding: 0.5rem 1rem;
      text-decoration: none;
      font-weight: bold;
      z-index: 9999;
    }
    
    /* Pagination styles */
    .pagination {
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }

    /* Override Pico.css button color for WCAG 1.4.3 AA compliance */
    button[type="submit"],
    button {
      color: white !important; /* White text on blue background for better contrast */
    }
  </style>
</head>
<body class="font-size-{{ fontSize | default('normal') }}">
  
  {# Include header with navigation and accessibility features #}
  {% include "_layout/_header.peb" %}
  
  {# Main landmark for screen readers (WCAG 1.3.1) #}
  <main id="main" class="container" tabindex="-1">
    {% block content %}
    {# Page-specific content goes here #}
    {% endblock %}
  </main>
  
  {# Include footer with helpful links and session info #}
  {% include "_layout/_footer.peb" %}

  {# Inline data URI so no external file is needed #}
  <audio id="click-sound" preload="auto" src="/static/audio/click.wav"></audio>

  <script>
    // sound on buttonClick and on and off feature
    (function () {
      const soundSelect = document.getElementById('sound-toggle');
      const soundSetting = localStorage.getItem('sound-enabled') || 'on';

      // Apply stored preference immediately
      if (soundSelect) {
        soundSelect.value = soundSetting;
        soundSelect.addEventListener('change', () => {
          localStorage.setItem('sound-enabled', soundSelect.value);
        });
      }

      // Handle button click sounds, respecting toggle state
      document.addEventListener('click', (event) => {
        const btn = event.target.closest('button, input[type="submit"], input[type="button"]');
        if (!btn) return;

        const soundEnabled = localStorage.getItem('sound-enabled') !== 'off';
        if (!soundEnabled) return;

        const audio = document.getElementById('click-sound');
        if (!audio) return;

        audio.currentTime = 0;
        audio.play().catch(() => {});
      });
    })();


    // backgrounf logic
    (function () {
      const select = document.getElementById('bg-mode');
      if (!select) return;
      const modes = ['default', 'light', 'contrast'];
      function apply(mode) {
        modes.forEach(m => document.body.classList.remove(`theme-${m}`));
        if (mode !== 'default') document.body.classList.add(`theme-${mode}`);
      }
      const stored = localStorage.getItem('bg-mode') || 'default';
      apply(stored);
      select.value = stored;
      select.addEventListener('change', (e) => {
        const mode = modes.includes(e.target.value) ? e.target.value : 'default';
        apply(mode);
        localStorage.setItem('bg-mode', mode);
      });
    })();
  </script>
</body>
</html>
